<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pcsaini779.hackathon.Game">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        android:fillViewport="false">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:padding="10dp"
                android:textColor="#e91e63"
                android:textSize="25dp"
                android:id="@+id/round"
                android:gravity="center_horizontal"
                android:text="Round 1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@id/round"
                android:id="@+id/numView"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number"
                    android:padding="10dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:id="@+id/txtView"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/resultView"
                android:layout_below="@id/round"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct Ans."
                    android:id="@+id/textNum"
                    android:padding="10dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="__"
                    android:id="@+id/corrNum"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/resultView"
                android:layout_width="fill_parent"
                android:id="@+id/editView"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <EditText

                    android:background="@drawable/edit"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:hint="Enter 1 Digit Number"
                    android:id="@+id/pickNumber"
                    />
                <Button
                    android:layout_margin="10dp"
                    android:background="@drawable/edit"
                    android:layout_width="100dp"
                    android:id="@+id/btnSubmit"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/editView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/btnLayout">


            <Button
                android:background="@drawable/team"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:layout_margin="20dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textStyle="bold"
                android:id="@+id/btnNext"
                />
            <Button
                android:layout_width="wrap_content"
                android:background="@drawable/team"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Solve"
                android:id="@+id/btnSolve" />

            </LinearLayout>

            <TextView
                android:layout_below="@id/btnLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:padding="10dp"
                android:id="@+id/score"
                android:gravity="center"
                android:textColor="#00bcd4"
                android:text=""/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
